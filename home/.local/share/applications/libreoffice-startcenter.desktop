[Desktop Entry]
Version=1.0
Terminal=false
NoDisplay=false
Icon=libreoffice-startcenter
Type=Application
Categories=Office;X-Red-Hat-Base;X-SuSE-Core-Office;X-MandrivaLinux-Office-Other;
Exec=env GTK_THEME=Adwaita libreoffice %U
MimeType=application/vnd.openofficeorg.extension;x-scheme-handler/vnd.libreoffice.cmis;x-scheme-handler/vnd.sun.star.webdav;x-scheme-handler/vnd.sun.star.webdavs;x-scheme-handler/vnd.libreoffice.command;x-scheme-handler/ms-word;x-scheme-handler/ms-powerpoint;x-scheme-handler/ms-excel;x-scheme-handler/ms-visio;x-scheme-handler/ms-access;
Name=LibreOffice
GenericName=Office
GenericName[en]=Office
Comment=The office productivity suite compatible to the open and standardized ODF document format. Supported by The Document Foundation.
Comment[en]=The office productivity suite compatible to the open and standardized ODF document format. Supported by The Document Foundation.
StartupNotify=true
X-GIO-NoFuse=true
StartupWMClass=libreoffice-startcenter
X-KDE-Protocols=file,http,ftp,webdav,webdavs

##Define Actions
Actions=Writer;Calc;Impress;Draw;Base;Math;

[Desktop Action Writer]
Name=Writer
Exec=env GTK_THEME=Adwaita libreoffice --writer

[Desktop Action Calc]
Name=Calc
Exec=env GTK_THEME=Adwaita libreoffice --calc

[Desktop Action Impress]
Name=Impress
Exec=env GTK_THEME=Adwaita libreoffice --impress

[Desktop Action Draw]
Name=Draw
Exec=env GTK_THEME=Adwaita libreoffice --draw

[Desktop Action Base]
Name=Base
Exec=env GTK_THEME=Adwaita libreoffice --base

[Desktop Action Math]
Name=Math
Exec=env GTK_THEME=Adwaita libreoffice --math

##End of actions menu
